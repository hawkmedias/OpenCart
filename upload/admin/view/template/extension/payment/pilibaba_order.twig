<h2>{{ text_payment_info }}</h2>
<table class="table table-striped table-bordered">
  <tr>
    <td>{{ text_orders_id }}</td>
    <td>{{ pilibaba_order.order_id }}</td>
  </tr>
  <tr>
    <td>{{ text_amount }}</td>
    <td>{{ pilibaba_order.amount }}</td>
  </tr>
  <tr>
    <td>{{ text_fee }}</td>
    <td>{{ pilibaba_order.fee }}</td>
  </tr>
  <tr>
    <td>{{ text_status }}</td>
    <td>{{ pilibaba_order.status }}</td>
  </tr>
  <tr>
    <td>{{ text_date_added }}</td>
    <td>{{ pilibaba_order.date_added }}</td>
  </tr>
  <tr>
    <td>{{ text_tracking }}</td>
    <td><input type="text" style="width:80px" maxlength="50" value="{{ pilibaba_order.tracking }}" id="tracking"/>
      <a class="button btn btn-primary btn-sm" id="button-tracking">{{ button_tracking }}</a>
      <span class="btn btn-primary btn-sm" style="display:none" id="img-loading-tracking"><i class="fa fa-circle-o-notch fa-spin fa-lg"></i></span></td>
  </tr>
  <tr>
    <td>{{ text_barcode }}</td>
    <td><a href="{{ barcode }}" target="_blank" class="button btn btn-primary btn-sm">{{ button_barcode }}</a>
	  <span style="padding-left:5px">{{ text_barcode_info }}</span></td>
  </tr>
</table>
<script type="text/javascript"><!--
$('#button-tracking').click(function() {
    if (confirm('{{ text_confirm }}')) {
        $.ajax({
            url: 'index.php?route=extension/payment/pilibaba/tracking&user_token={{ user_token }}',
            type: 'post',
            dataType: 'json',
            data: { 'order_id': {{ order_id }}, 'tracking': $('#tracking').val() },
            beforeSend: function() {
                $('#button-tracking').hide();
                $('#img-loading-tracking').show();
                $('.pilibaba_message').remove();
            },
            success: function (json) {
                if (json['success']) {
                    $('h2').after('<div class="alert alert-success pilibaba_message" style="display:none"><i class="fa fa-check-circle"></i> ' + json['success'] + '</div>').fadeIn();
                }

                if (json['error']) {
                    $('h2').after('<div class="alert alert-danger pilibaba_message" style="display:none"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + '</div>').fadeIn();
                }

                $('#button-tracking').show();
                $('#img-loading-tracking').hide();
                $('.pilibaba_message').fadeIn();
            }
        });
    }
});
//--></script>
