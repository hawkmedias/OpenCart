  {% if flp_status == 'review' %}
    <tr style="background-color: #eee;">
      <td colspan="2" id="flp_action">
        <form method="post" id="review-action">
          <div style=text-align:center>
            <button type="button" class="btn btn-primary" id="button-flp-approve"><i class="fa fa-check"></i> {{ text_approve }}</button>
            <button type="button" class="btn btn-danger" id="button-flp-reject"><i class="fa fa-remove"></i> {{ text_reject }}</button>
          </div>
          <input type="hidden" name="flp_id" value="{{ flp_id }}" id="flp_id"/>
          <input type="hidden" name="new_status" value="" id="new_status"/>
        </form>
        <script>
        $(document).ready(function () {
            $('#button-flp-approve').click(function () {
                $('#new_status').val("APPROVE");

                $('#review-action').submit();
            });
        });

        $(document).ready(function () {
