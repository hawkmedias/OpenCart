                  <label class="col-sm-2 control-label" for="input-cookie"><span data-toggle="tooltip" title="{{ help_cookie|escape('html') }}">{{ entry_cookie }}</span></label>
                  <div class="col-sm-10">
                    <select name="config_cookie_id" class="form-control" id="input-cookie"/>
