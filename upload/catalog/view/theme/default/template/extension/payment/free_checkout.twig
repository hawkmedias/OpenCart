<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" class="btn btn-primary" data-loading-text="{{ text_loading }}" id="button-confirm"/>
  </div>
</div>
<script type="text/javascript"><!--
$('#button-confirm').on('click', function() {
    $.ajax({
        type: 'get',
        url: 'index.php?route=extension/payment/free_checkout/confirm',
        cache: false,
        beforeSend: function() {
            $('#button-confirm').button('loading');
        },
        complete: function() {
            $('#button-confirm').button('reset');
        },
        success: function() {
            location = '{{ continue }}';
        }
    });
});
//--></script>
